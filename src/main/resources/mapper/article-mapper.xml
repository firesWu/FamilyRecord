<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="article">

        <insert id="insert" parameterType="Article">
                INSERT article(rId,title,content,creator) VALUES (#{rId},#{title},#{content},#{creator});
        </insert>

        <update id="update" parameterType="Article">

            UPDATE article SET title = #{title},content = #{content} WHERE id = #{id};

        </update>

        <select id="select" parameterType="Article" resultType="Article">
                SELECT
                  article.id,
                  article.rId,
                  article.title,
                  article.content,
                  article.creator,
                  article.createTime
                FROM
                  article
                WHERE isDelete = 0
                <trim>
                        <if test="rId != null and rId !=''">
                                and rId = #{rId}
                        </if>
                </trim>
        </select>

        <update id="deleteArticle" parameterType="Integer">
            UPDATE article SET isDelete = 0 WHERE id = #{id};
        </update>
</mapper>